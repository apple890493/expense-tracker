<div class="container" id="container">
  <div class="left-container">
    <div class="overlay">
      <div class="overlay-panel overlay-right">
        <h1>Wellcome</h1>
      </div>
    </div>
  </div>
  <div class="right-container">
    <div class="right-container-top">
      <form action="/" method="POST">
        <button id="btn-creat" type="submit">Creat</button>
      </form>
    </div>
    <div class="form-group">
      {{#each records}}
      <div class="list-group-item">
        <div class="d-flex list-content">
          <div class="d-flex left-conten">
            <div class="icon-body mr-4">
              <span><i class="fas fa-pen"></i></span>
            </div>
            <div class="text-body">
              <h6 class="mb-1">{{this.name}}</h6>
              <small class="mb-1">{{this.date}}</small>
            </div>
          </div>
          <div class="right-content mr-5">
            <h5>{{this.amount}}</h5>
          </div>
        </div>
        <div class="icon-group">
          <a id="btn-edit" href="#"><i class="fas fa-pen-square fa-lg"></i></a>
          <a id="btn-delete" href=""><i class="fas fa-minus-square fa-lg"></i></a>
        </div>
      </div>
      {{/each}}
    </div>
  </div>


</div>